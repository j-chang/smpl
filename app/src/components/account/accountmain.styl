.AccountMain
  position: relative
  min-height: 90vh

  .AccountInfo
    margin: 0 60px
    margin-top: 30px
    position: relative

    &-title
      font-size: 16px
      font-weight: 600
      text-transform: uppercase
      font-family: $font
      letter-spacing: 0.02em
      padding-left: 18px
      margin-bottom: 24px

    &-email
      font-size: 16px
      font-family: $font
      color: $color-gray
      letter-spacing: 0.02em
      margin-left: 30px

  .LogoutButton
    height: 48px
    line-height: 48px
    font-family: $font
    font-size: 16px
    text-decoration: none
    color: $color-gray
    margin-left: 60px
    margin-bottom: 6px
    padding: 0 30px
    border: 1px solid #ddd
    border-radius: 40px
    position: absolute
    bottom: 0
    box-shadow: 0 1px 6px rgba(0,0,0,0.2)
    background: rgba(255,255,255,0.4)
    cursor: pointer