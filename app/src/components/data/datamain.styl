.DataMain
  .Files
    margin: 0 30px
    margin-top: 24px

    .FilesList
      font-family: $font
      font-size: 16px
      letter-spacing: 0.02em

      &-head
        display: flex
        font-size: 14px
        font-weight: 500
        color: $color-gray
        text-transform: uppercase
        height: 34px
        line-height: 34px
        border-bottom: 2px solid $color-light-blue

        &-load
          width: 34px
          margin-left: 30px

        &-name
          width: 50%
          padding-left: 16px

        &-progress
          flex: 1 1 34px

        &-size
          width: 10%
          padding-right: 12px
          text-align: end

        &-date
          width: 10%
          padding-left: 12px

        &-actions
          width: 34px
          margin-right: 30px

      .DataFile
        display: flex
        align-items: center
        font-size: 16px
        color: $color-gray
        height: 58px
        line-height: 58px
        border-bottom: 1px solid aliceblue
        background: rgba(255,255,255,.98)

        &:hover
          background: rgba(255,255,255,.80)

        &-load
          text-align: center
          color: $color-light-blue
          cursor: pointer
          width: 34px
          margin-left: 30px

          &:hover
            opacity: .6

        &-name
          width: 50%
          padding-left: 16px
          overflow: hidden
          white-space: nowrap
          text-overflow: ellipsis

          &:hover
            text-overflow: clip

        &-progress
          display: flex
          flex: 1 1 34px
          height: 100%
          align-items: center
          justify-content: center

          &-bar
              width: 90%
              height: 3px
              background: $color-light-gray
              border-radius: 2px

              &-status
                height: 3px
                width: 5%
                width: 70%
                background: $color-light-blue
                border-radius: 2px

        &-size
          width: 10%
          font-size: 14px
          padding-right: 12px
          text-align: end
          white-space: nowrap

        &-date
          width: 10%
          font-size: 14px
          padding-left: 12px

        &-actions
          width: 34px
          margin-right: 30px

          &-delete
            font-size: 16px
            height: 34px
            width: 34px
            line-height: 34px
            text-align: center
            border-radius: 50%
            color: #bbb
            margin: 0 auto

            &:hover
              cursor: pointer
              background: $color-light-gray
              opacity: .6
              color: #F47677