.DataMain
  .Files
    margin: 36px 60px 0 60px

    .UploadButton
      height: 42px
      line-height: 42px
      text-align: center
      width: 200px
      color: #fff
      background: $color-light-blue
      box-shadow: 1px 1px 1px rgba(0,0,0,0.2)
      font-family: $font
      font-size: 16px
      letter-spacing: 0.02em
      border-radius: 22px
      margin: 30px
      cursor: pointer
      outline: none
      transition: background .2s ease

      &:hover, &:focus
        opacity: .8
        background: $color-blue

      &-label
        display: inline-block
        width: 100%
        border-radius: inherit
        cursor: pointer

    .FilesList
      font-family: $font
      font-size: 16px
      letter-spacing: 0.02em
      box-shadow: 0 1px 6px #b5c5ea
      box-shadow: 0 1px 6px rgba(0,0,0,0.1)
      background: rgba(255,255,255,.98)
      border-radius: 22px
      overflow: hidden

      &-head
        display: flex
        font-size: 14px
        font-weight: 500
        text-transform: uppercase
        height: 36px
        line-height: 36px
        border-bottom: 2px solid #ddd
        border-image: linear-gradient(to right, $color-light-blue, rgba(221,221,221,0.8)) 1

        &-load
          width: 34px
          margin-left: 30px

        &-name
          width: 50%
          padding-left: 16px

        &-progress
          flex: 1 1 34px

        &-size
          width: 10%
          padding-right: 12px
          text-align: end

        &-date
          width: 10%
          padding-left: 12px

        &-actions
          width: 34px
          margin-right: 30px

      .DataFile
        display: flex
        align-items: center
        font-size: 16px
        color: $color-gray
        height: 58px
        line-height: 58px

        &:hover
          background: #f9f9f9

          &, .DataFile-actions
            visibility: visible

        &-load
          text-align: center
          color: #ccc
          cursor: pointer
          width: 34px
          margin-left: 30px

          &:hover
            color: #ddd
            opacity: .8

        &-name
          width: 50%
          padding-left: 16px
          overflow: hidden
          white-space: nowrap
          text-overflow: ellipsis

          &:hover
            text-overflow: clip

        &-progress
          display: flex
          flex: 1 1 34px
          height: 100%
          align-items: center
          justify-content: center

        &-size
          width: 10%
          font-size: 14px
          padding-right: 12px
          text-align: end
          white-space: nowrap

        &-date
          width: 10%
          font-size: 14px
          padding-left: 12px

        &-actions
          visibility: hidden
          width: 34px
          margin-right: 30px

          &-delete
            font-size: 16px
            height: 34px
            width: 34px
            line-height: 34px
            text-align: center
            color: #ccc
            margin: 0 auto
            cursor: pointer

            &:hover
              color: #ddd