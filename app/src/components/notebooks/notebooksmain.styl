.NotebooksMain, .HomeMain
  .Notebook:hover .NotebookAction
    visibility: visible

  .NotebookAction
    visibility: hidden
    font-size: 16px
    height: 34px
    width: 34px
    line-height: 34px
    text-align: center
    color: #bbb

    &-delete
      margin-left: 8px

    &-delete:hover
      color: #ddd

    &-copy:hover
      color: #ddd

  .NotebookName
    width: 50%
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    margin-right: 30px
    margin-left: 12px

    &:hover
      text-overflow: clip

  .Notebooks-filter
    color: $color-gray
    font-family: $font
    font-size: 16px
    letter-spacing: 0.02em
    margin-top: 36px
    margin-bottom: 30px
    padding-left: 16px
    width: max-content
    cursor: pointer

    &:hover
      color: $color-light-blue