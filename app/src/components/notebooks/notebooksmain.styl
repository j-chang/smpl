.NotebooksMain, .HomeMain
  .Notebook:hover .NotebookAction
    visibility: visible

  .NotebookAction
    // visibility: hidden
    font-size: 16px
    height: 34px
    width: 34px
    line-height: 34px
    text-align: center
    border-radius: 50%
    color: #bbb

    &-delete
      margin-left: 8px

    &-delete:hover
      background: $color-light-gray
      opacity: .6
      color: #F47677

    &-copy:hover
      background: $color-light-gray
      opacity: .6
      color: $color-light-blue

  .NotebookName
    width: 50%
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    margin-right: 30px
    margin-left: 12px

    &:hover
      text-overflow: clip

  .Notebook-cluster
    background: $color-light-blue
    color: #fff
    border-radius: 40px
    height: 28px
    line-height: 28px
    font-size: 12px
    padding: 0 12px
    margin: 0 auto
    text-align: center
    width: 20%
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis

    &:hover
      opacity: .6

    &-attach
      background: $color-light-gray
      color: $color-gray

      &:hover
        opacity: 1

    &-icon
      height: 8px
      width: 8px
      border-radius: 50%
      background: #ddd
      background: #00D096 //active
      margin-right: 8px
      display: inline-block

  .is-working
    animation: pulse-working 1.2s cubic-bezier(.57,.21,.69,1.25) infinite alternate

    @keyframes pulse-working {
      0% {
        background: #ddd
      }
      100% {
        background: $color-light-blue
      }
    }