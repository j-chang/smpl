.NewCluster
  .ClusterPreview
    margin: 0 30px
    margin-top: 24px

    &-cluster
      height: 58px
      line-height: 58px
      color: $color-gray
      font-family: $font
      font-size: 16px
      letter-spacing: 0.02em
      margin: 6px 0
      padding: 0 30px
      background: rgba(255,255,255,.98)
      box-shadow: 0 0 22px 0 #b5c5ea
      display: flex
      align-items: center

    &-specs
      margin: 0 auto

  .NewCluster-form
    margin: 0 30px
    margin-top: 60px
    position: relative

    &-title
      font-size: 16px
      font-weight: 500
      color: $color-gray
      text-transform: uppercase
      font-family: $font
      letter-spacing: 0.02em
      padding-left: 18px
      margin-bottom: 24px

    &-label
      height: 58px
      line-height: 58px
      color: $color-gray
      font-family: $font
      font-size: 16px
      letter-spacing: 0.02em
      margin: 6px 0
      padding: 0 30px
      display: flex
      align-items: center

    &-input
      position: absolute
      outline: none
      left: 40%
      height: 44px
      width: 380px
      padding: 0 16px
      font-size: 16px
      border-radius: 4px
      border: 2px solid #b5c5ea

      &::placeholder
        color: #ccc

      &:focus
        border: 2px solid $color-light-blue

    &-num
      position: absolute
      width: 40px
      text-align: center
      left: 40%

    &-slider
      -webkit-appearance: none
      appearance: none
      outline: none
      position: absolute
      left: calc(40% + 40px)
      width: 370px
      height: 4px
      background: #ddd
      background: #b5c5ea
      border-radius: 2px

      &:focus
        &.NewCluster-form-slider::-webkit-slider-thumb
          border: 1px solid $color-blue

      &::-webkit-slider-thumb
        -webkit-appearance: none
        height: 18px
        width: 18px
        background: $color-light-blue
        border-radius: 50%
        cursor: pointer

    &-select
      -webkit-appearance: none
      width: 416px
      padding: 0 30px

  .NewCluster-AdvancedOptions
    font-size: 16px
    font-weight: 500
    color: #bbb
    text-transform: uppercase
    font-family: $font
    letter-spacing: 0.02em
    padding-left: 18px
    margin-top: 30px
    margin-left: 30px

    &-caret-down
      width: 0
      height: 0
      border-left: 6px solid transparent
      border-right: 6px solid transparent
      border-top: 6px solid #bbb
      display: inline-block
      margin-bottom: 4px
      margin-left: 6px

  .SubmitCluster
    height: 48px
    line-height: 48px
    text-align: center
    width: 240px
    color: #fff
    background: $color-light-blue
    box-shadow: 1px 1px 1px rgba(0,0,0,0.2)
    font-family: $font
    font-size: 16px
    letter-spacing: 0.02em
    margin: 8px 0
    border-radius: 40px
    margin-left: 30px
    margin-top: 48px
    cursor: pointer
    outline: none
    transition: opacity .2s ease

    &:hover, &:focus
      opacity: .8
