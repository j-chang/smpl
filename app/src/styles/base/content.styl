.Content-with-sidebar
  margin-left: 355px
  overflow: auto

  .ContentName
    height: 58px
    line-height: 58px
    color: $color-light-blue
    font-family: $font
    font-size: 30px
    letter-spacing: 0.02em
    margin: 6px 30px
    padding: 0 12px

  .List, .Section
    margin: 0 30px
    margin-top: 24px

    &-name
      height: 58px
      line-height: 58px
      color: $color-gray
      font-family: $font
      font-size: 20px
      letter-spacing: 0.02em
      margin: 6px 0
      padding: 0 30px

    &-item
      height: 58px
      line-height: 58px
      color: $color-gray
      font-family: $font
      font-size: 16px
      letter-spacing: 0.02em
      margin: 6px 0
      padding: 0 30px
      background: rgba(255,255,255,.98)
      box-shadow: 1px 1px 1px rgba(0,0,0,0.2)
      display: flex
      align-items: center
      cursor: pointer

  .EmptyList
    height 120px
    line-height: 120px
    text-align: center
    background: $color-light-gray
    color: $color-gray
    font-family: $font
    font-size: 16px
    letter-spacing: 0.02em